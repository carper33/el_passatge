<%= form_for @booking, url: {action: "create",controller: "bookings"}  do |f| %>

	<%= f.label :pax %>
	<%= f.text_field :pax, required: true, size:4 %>
	<br>
	<%= f.label :date_arrival %>
	<%= f.text_field :date_arrival, required: true, size:4%>
	<br>
	<%= f.label :date_departure %>
	<%= f.text_field :date_departure, required: true, size:4 %>
	<br>
	<% rooms_array= Room.all.map{|room| [ room.name, room.id]}%>
	<%= f.label :room_id %>
	<%= f.select(:room_id, rooms_array) %>
	<br>

<%end%>
