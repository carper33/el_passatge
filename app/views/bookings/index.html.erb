
<%= form_for @booking do |f| %>

	<%= f.label :pax %>
	<%= f.text_field :pax, size:4 %>
	<br>
	<%= f.label :date_arrival %>
	<%= f.text_field :date_arrival, size:4%>
	<br>
	<%= f.label :date_departure %>
	<%= f.text_field :date_departure, size:4 %>
	<br>
	<%= f.label :room_id %>
	<%= f.select(:room_id,[['room1',1],['room2',2],['room3',3],['room4',4],['room5',5],['room6',6]]) %>
	<br>

	<%= f.submit 'Save'%>

<%end%>

